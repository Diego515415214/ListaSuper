<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListaSuper.Vista.AddPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnGuardar" Text="Guardar"  Clicked="btnGuardar_Clicked" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout Padding="15" BackgroundColor="Aquamarine">
            <Label Text="Día" FontSize="Medium"
                   TextColor="Red">
            </Label>
            <Entry x:Name="nombre"/>

            
            <Label Text="Productos" FontSize="Medium"
                   TextColor="{StaticResource Rosa}">
            </Label>
            <Editor x:Name="descripción" HeightRequest="200"/>
        
        </StackLayout>
    </ContentPage.Content>
</ContentPage>